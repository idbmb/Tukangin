<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
  <title>dashboard Tukangin App v1.0</title>
</head>
<body>

<table>
  <tr>
    <th>No</th>
    <th>Nama user</th>
    <th>Nama tukang</th>
    <th>kebutuhan user</th>
    <th>status</th>
    <th>action</th>
  </tr>
  <% orders.forEach(function(order){ %>
  <tr>
    <td><%=order.id%></td>
    <td><%=order.UserId%></td>
    <td><%=order.Profile_tukangId%></td>
    <td><%=order.description%></td>
    <td><%=order.status%></td>
    <td><a href="/tukangs/edit/<%=order.id%>">Edit</a> | <a href="/tukangs/delete/<%=order.id%>">Delete</a></td>
  </tr>
  <% }) %>
</table>

</body>
</html>
